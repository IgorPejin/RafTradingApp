<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RafTrading" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="ShapeAppearanceOverlay.MyApp.Button.Rounded" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="pozadina" parent="Theme.RafTrading">
        <item name="backgroundColor">@color/white</item>
    </style>

    <style name="nav" parent="Theme.RafTrading">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/gray</item>
    </style>

    <style name="navup" parent="Theme.RafTrading">
        <item name="tabTextColor">@color/white</item>
        <item name="tabBackground">@color/gray</item>
    </style>

    <style name="slikaProfila" parent="Theme.RafTrading">
        <item name="srcCompat">@drawable/profilna</item>
    </style>

    <style name="dugme" parent="Theme.RafTrading">
        <item name="android:textColor">@color/selected</item>
        <item name="backgroundTint">@color/gray</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="profil" parent="Theme.RafTrading">
        <item name="android:textColor">@color/gray</item>
    </style>

    <style name="tradeNews" parent="Theme.RafTrading">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20sp</item>
    </style>


</resources>